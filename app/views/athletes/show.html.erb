<h1><%= @athlete.name %></h1>
<p class="text-muted">SliderRating: 1199 <small><a href="#">What's this?</a></small></p>
<h3>Results</h3>
<table class="table table-striped table-bordered">
	<tr>
		<th>Race</th>
		<th>Pos.</th>
	</tr>
	<% @athlete.results.each do |result| %>
	<tr>
		<td><%= link_to result.race.name, result.race %></td>
		<td><%= result.position %></td>
	</tr>
	<% end %>
</table>
