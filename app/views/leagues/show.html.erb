<h1><%= @league.name %></h1>

<ul class="nav nav-tabs">
  <li class="active"><a href="#league" data-toggle="tab">League</a></li>
  <li><a href="#team" data-toggle="tab">My Team</a></li>
  <li><a href="#rules" data-toggle="tab">Rules</a></li>
  <li><a href="#standings" data-toggle="tab">Standings</a></li>
  <li class="dropdown">
   	<a href="#" id="myTabDrop1" class="dropdown-toggle" data-toggle="dropdown">Teams <b class="caret"></b></a>
    <ul class="dropdown-menu" role="menu" aria-labelledby="myTabDrop1">
      <% @league.memberships.each do |member| %>
        <li><%= member.user.email %></li>
        <!--<a href="#dropdown1" tabindex="-1" data-toggle="tab">@fat</a>-->
      <% end %>
    </ul>
  </li>
  <li><a href="#settings" data-toggle="tab">Settings</a></li>
</ul>

<h3>Settings</h3>
<h4>Races in this league</h4>
<ul>
<% @league.matches.each do |match| %>
  <li><%= link_to match.race.name, match.race %></li>
<% end %>
</ul>

<h4>Teams in this league</h4>
<ul>
  <% @league.memberships.each do |member| %>
    <li><%= member.user.email %></li>
  <% end %>
</ul>

<% unless @league.private %>
  <% if current_user.is_member(@league) %>
    <%= link_to 'Leave League', leave_league_path(@league), class: 'btn btn-default' %>
  <% else %>
   <%= link_to 'Join League', join_league_path(@league), class: 'btn btn-default' %>
  <% end %>
<% end %>




