<h1><%= @race.name %></h1>

<%= form_for @race do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.datetime_select :startdate, class: 'form-control' %>
  </div>

  <div class="checkbox">
    <label>
    <%= f.check_box :completed %> Mark this race as completed
    </label>
    <span class="help-block">Warning! Only mark races as complete if they have full and accurate results.</span>
  </div>

  <%= f.submit %>

<% end %>

  <%= link_to 'Add or Edit Results', race_results_path(@race) %>

